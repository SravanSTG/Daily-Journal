<%- include("partials/header") %>

  <h1>Home</h1>
  <p> <%= homeText %> </p>

  <% posts.forEach(function(item) { %>
    <h1> <%= item.title %> </h1>
    <p style="display: inline-block"> <%= item.content.substring(0, 100) + " ..." %> </p>
    <a href="/posts/<%= item._id %>">Read more</a>
  <% }); %>

<%- include("partials/footer") %>
